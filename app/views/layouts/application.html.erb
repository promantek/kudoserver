<!DOCTYPE html>
<html>
<head>
  <title>KudoServer</title>
  <%= stylesheet_link_tag :application %>
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%- if current_user %>
      <div class="auth">
        <%= link_to current_user.username, root_path %>
        |
        <%= link_to 'logout', destroy_user_session_path %>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
